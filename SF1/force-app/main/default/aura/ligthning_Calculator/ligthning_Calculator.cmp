<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name= "Anumber" type = "Integer"/>
    <aura:attribute name= "Percentage" type = "Integer"/>
    <aura:attribute name= "ListColor" type = "string[]" default= "['Red','Blue','Orange']" />
    <aura:attribute name= "color" type = "string"/>
    
    
    <div class= "slds-box example-box">  
        <div class="slds-p-around_x-small">
            <lightning:input type="number" name="Number" 
                             label="Enter a number" 
                             placeholder="type here..."
                             value = "{!v.Anumber}"
                             required = "true"/> <br/>
            
            <lightning:input type="number" name="percentage" 
                             label="Enter percentage" 
                             value = "{!v.Percentage}"
                             formatter = "percent-fixed" 
                             required = "true"/>
            <br/>
            <div class="slds-box slds-box_xx-small"> {!mult(v.Anumber, v.Percentage)}<br/>
            </div>
            <br/>
            <lightning:button variant="destructive" label="Base" 
                              title="Base action" 
                              onclick="{! c.handleClick }"/> <br/>
            <div class="slds-box slds-box_xx-small"> {!v.color} <br/>
            </div>
        </div>
        
    </div>
</aura:component>